<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lixnet.mkopo.activities.LoanDetailsActivity"
    tools:showIn="@layout/activity_loan_details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:text="View Loan"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/amountlabel"
        android:text="Loan Amount : "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/header"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amounttxt"
        android:text="KES 0.00"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/amountlabel"
        android:layout_below="@+id/header"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/statuslabel"
        android:text="Loan Status : "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/amountlabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statustxt"
        android:text="Approved"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/statuslabel"
        android:layout_below="@+id/amountlabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datelabel"
        android:text="Date Borrowed: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/statuslabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datetxt"
        android:text="yyyy-mm-dd 00:00"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/datelabel"
        android:layout_below="@+id/statuslabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/interestlabel"
        android:text="Interest rate (%): "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/datelabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interesttxt"
        android:text="10%"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/interestlabel"
        android:layout_below="@+id/datelabel"
        android:fontFamily="sans-serif-condensed"/>


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/balancelabel"
        android:text="Balance: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/interestlabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balancetxt"
        android:text="KES 0.00"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/balancelabel"
        android:layout_below="@+id/interestlabel"
        android:fontFamily="sans-serif-condensed"/>

    <Button
        android:layout_below="@+id/datelabel"
        android:id="@+id/btn_repay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Repay Loan"
        android:layout_marginTop="100dp"
        android:textColor="#fff"/>

</RelativeLayout>
