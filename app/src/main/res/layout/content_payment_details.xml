<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lixnet.mkopo.activities.PaymentDetailsActivity"
    tools:showIn="@layout/activity_payment_details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:text="View Payment"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:fontFamily="sans-serif-condensed"/>


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/instalmentslabel"
        android:text="Instalment #: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/header"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instalmenttxt"
        android:text="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/header"
        android:layout_toRightOf="@+id/instalmentslabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/amountlabel"
        android:text="Loan Amount : "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/instalmentslabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amounttxt"
        android:text="KES 0.00"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/amountlabel"
        android:layout_below="@+id/instalmentslabel"
        android:fontFamily="sans-serif-condensed"/>



    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datelabel"
        android:text="Payment Date: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/amountlabel"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datetxt"
        android:text="yyyy-mm-dd 00:00"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/datelabel"
        android:layout_below="@+id/amountlabel"
        android:fontFamily="sans-serif-condensed"/>

    <!--<Button
        android:layout_below="@+id/datelabel"
        android:id="@+id/btn_repay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Repay Loan"
        android:layout_marginTop="100dp"
        android:textColor="#fff"/>-->

</RelativeLayout>
