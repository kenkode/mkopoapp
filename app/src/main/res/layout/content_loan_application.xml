<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lixnet.mkopo.activities.LoanApplicationActivity"
    tools:showIn="@layout/activity_loan_application"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:text="Select Loan"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:fontFamily="sans-serif-condensed"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:id="@+id/layoutAbove"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/loan500"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <ImageView
            android:id="@+id/loan_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loan2" />

        <TextView
            android:id="@+id/textView500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loan_image"
            android:text="Ksh. 500.00"
            android:gravity="center"
            android:textColor="#555"
            android:textSize="16dp"
            android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_toRightOf="@+id/loan500"
        android:id="@+id/loan1000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/loan1000_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loan2" />

            <TextView
                android:id="@+id/textView1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loan1000_image"
                android:text="Ksh. 1,000.00"
                android:gravity="center"
                android:textColor="#555"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/loan1000"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/loan2000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/loan2000_image"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loan2" />

            <TextView
                android:id="@+id/textView2000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loan2000_image"
                android:text="Ksh. 2,000.00"
                android:gravity="center"
                android:textColor="#555"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_below="@+id/layoutAbove"
            android:padding="5dp">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/loan3000">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/loan3000_image"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/loan2" />

                    <TextView
                        android:id="@+id/textView3000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan3000_image"
                        android:text="Ksh. 3,000.00"
                        android:gravity="center"
                        android:textColor="#555"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_toRightOf="@+id/loan3000"
                android:id="@+id/loan4000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/loan4000_image"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/loan2" />

                    <TextView
                        android:id="@+id/textView4000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan4000_image"
                        android:text="Ksh. 4,000.00"
                        android:gravity="center"
                        android:textColor="#555"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/loan5000"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/loan5000">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/loan5000_image"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/loan2" />

                    <TextView
                        android:id="@+id/textView5000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan5000_image"
                        android:text="Ksh. 5,000.00"
                        android:gravity="center"
                        android:textColor="#555"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
